// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  user_name  String
  user_email String
  UserApps   UserApps[]
}

model Event {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  event_name String
  event_desc String
  event_date DateTime    @db.Date
  event_type Float
  create_by  String      @default("user")
  avatar     String?
  send_to    String?
  UserEvent  UserEvent[]
  media      Media?      @relation(fields: [id], references: [id])
}

model UserEvent {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  event_id   String   @db.ObjectId
  user_id    String
  status     String
  isDisable  Boolean  @default(false)
  created_on DateTime @default(now())
  event      Event?   @relation(fields: [event_id], references: [id])
}

model Media {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  media_type String
  media_url  String
  event_date String
  created_on DateTime @default(now())
  Event      Event[]
}

model Applications {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  app_name   String
  avatar     String
  status     String
  isDisable  Boolean    @default(false)
  created_on DateTime   @default(now())
  UserApps   UserApps[]
}

model UserApps {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  app_id     String        @db.ObjectId
  user_id    String        @db.ObjectId
  status     String
  isDisable  Boolean       @default(false)
  created_on DateTime      @default(now())
  metadata   Json?
  app        Applications? @relation(fields: [id], references: [id])
  User       User?         @relation(fields: [userId], references: [id])
  userId     String?       @db.ObjectId
}
